{
  "extends": "./tsconfig.json",
  "compilerOptions": {
    "module": "CommonJS",
    "target": "ESNext",
    "declaration": true,
    "declarationMap": true,
    "moduleResolution": "Node",
    "baseUrl": ".",
    "paths": {
      "@/*": ["src/*"],
    },
    "types": ["node", "jest"],
    "esModuleInterop": true,
    "skipLibCheck": true,
    "strict": true,
    "jsx": "react-jsx",
    "lib": ["ESNext", "dom"],
  },
  "include": ["src"],
  "exclude": ["src/bin", "node_modules", "dist", "**/*.stories.tsx"]
}
