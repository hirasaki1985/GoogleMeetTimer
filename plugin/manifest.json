{
  "name": "GoogleMeetTimer",
  "version": "1.0.1",
  "manifest_version": 4,
  "description": "Timer on Google Meet.",
  "action": {
    "default_popup": "popup.html"
  },
  "permissions": ["storage", "activeTab", "scripting"],
  "background": {
    "service_worker": "background.js"
  },
  "content_scripts": [
    {
      "matches": ["https://meet.google.com/*"],
      "js": ["index.js"]
    }
  ]
}